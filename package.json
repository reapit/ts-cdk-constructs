{
  "name": "@reapit-cdk/ts-constructs",
  "description": "CDK Constructs Monorepo",
  "packageManager": "yarn@3.6.3",
  "private": true,
  "workspaces": [
    "packages/*/*"
  ],
  "scripts": {
    "test": "jest --ignoreProjects 'integration tests'",
    "check": "tsc packages/**/*.ts --noEmit",
    "build": "yarn workspaces foreach -v run build",
    "lint": "yarn workspaces foreach -v run lint",
    "integ": "jest --ignoreProjects 'unit tests'",
    "root:test": "jest --ignoreProjects 'integration tests'",
    "root:integ": "jest --ignoreProjects 'unit tests'",
    "root:check": "tsc",
    "generate-readme": "reapit-cdk-generate-readme"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@reapit-cdk/generate-readme": "workspace:^",
    "@reapit-cdk/integration-tests": "workspace:^",
    "@types/jest": "^29.5.5",
    "aws-cdk": "2.96.2",
    "aws-sdk-client-mock": "^3.0.0",
    "aws-sdk-client-mock-jest": "^3.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2"
  }
}
